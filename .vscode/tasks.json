{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug run",
            "type": "shell",
            "command": "make -C ${workspaceFolder} MODE=debug -s run",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make debug main",
            "type": "shell",
            "command": "make -C ${workspaceFolder} MODE=debug -s main",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make debug link",
            "type": "shell",
            "command": "make -C ${workspaceFolder} MODE=debug -s link",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make run",
            "type": "shell",
            "command": "make -C ${workspaceFolder} -s run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make main",
            "type": "shell",
            "command": "make -C ${workspaceFolder} -s main",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make run_test",
            "type": "shell",
            "command": "make -C ${workspaceFolder} MODE=debug -s run_test",
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}